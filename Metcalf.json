{
  "command": "openscad",
  "maxWorkers": 30,
  "sets": {
    "controller": ["Xbox", "PS4"],
    "height_addition": [6, 8, 10],
    "grip_type": ["Circular", "Sausage", "Without"]
  },
  "tasks": {
    "knobby": {
      "title": "Knobby @height_addition@mm @grip_type@ grip",
      "run": ["controller", "height_addition", "grip_type"],
      "commandArgs": [
        "-o", "stl/Knobby @controller@ @height_addition@mm @grip_type@ Grip.stl",
        "-D", "CONTROLLER=@controller@",
        "-D", "HEIGHT_ADDITION=@height_addition@",
        "-D", "GRIP_TYPE=\"@grip_type@\"",
        "scad/Knobby.scad"
      ],
      "createDirs": ["stl"]
    }
  }
}